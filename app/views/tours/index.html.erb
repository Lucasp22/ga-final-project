<!-- All Tours#index section -->
<div id="menu-content" class="bg-none">
  <div class="overlay">
  <div class="container mt-5">
    <div class="row">
      <div class="col-md-6 m-auto">
        <div class="input-group my-5">
  <select class="custom-select" id="inputGroupSelect04" aria-label="Example select with button addon">
    <option selected>Choose Price</option>
    <option value="1">500-1000</option>
    <option value="2">1000-4000</option>
    <option value="3">4000-7000</option>
  </select>
  <div class="input-group-append">
    <button class="btn btn-success" type="button">Search</button>
  </div>
</div>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <div class="table-responsive">
        <table class="table table-hover table-light">
          <thead>
            <tr>
              <th scope="col" class="text-center">All Tours</th>
              <th scope="col">Title</th>
              <th scope="col">Description</th>
              <th scope="col">Duration</th>
              <th scope="col">Price</th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
            <% @tours.each do |tour| %>
              <tr>

                <td><a href="<%= url_for tour %>"><img src="<%= tour.image_url %>" class="img-thumbnail img-fluid" alt="<%=tour.title %>"></a></td>
                <td>
                  <%= link_to tour.title, tour %></td>
                <td><%= tour.description.first(100) %>...<a href="<%= url_for tour %>">Read More</a></td>

                <td>
                  <% if tour.tour_days.present? %>
                  <%= tour.tour_days.size %> days
                  <% else %>
                  TBA
                  <% end %>
                </td>
                <td>$<%= tour.price %></td>
                <td> <%= link_to "Details and Booking", tour, class: "btn btn-info"  %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
          </div>
      </div>
    </div>

  </div>
</div>
</div>
