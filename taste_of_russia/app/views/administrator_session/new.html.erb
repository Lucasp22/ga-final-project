
<%= form_tag admin_login_path do %>
<div id="login-form" class="bg-none">
  <div class="overlay">
  <div class="container mt-5">
    <div class="row">
      <div class="col-12 col-md-6 mx-auto">
        <h1 class="text-white">Administrator Log In</h1>
      </div>
    </div>
    <div class="row">
      <div class="col-12 col-md-6 mx-auto">
        <%= label_tag :email %>
        <%= email_field_tag :email, "", class: "form-control" %>
      </div>
    </div>
    <div class="row">
      <div class="col-12 col-md-6 mx-auto">
        <%= label_tag :password %>
        <%= password_field_tag :password, "", class: "form-control" %>
      </div>
    </div>
    <div class="row">
      <div class="col-12 col-md-6 mx-auto py-2">
        <%= button_tag type: 'submit', class: "btn btn-primary btn-block", style: "background: #990000;" do %>
          <i class="fas fa-sign-in-alt"></i> Log In!
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>
<% end %>
